@Html.Partial("_HeaderUser")
@model tiket_reservation.Models.Gabungan
<style>
    .form-group {
        margin: 0 0 0 0 !important;
    }
</style>
<div id="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h1 class="judul">Data Pemesan <i style="padding-left: 15px; padding-top: 20px; font-
size: 40px;"
                    class="fa fa-book" aria-hidden="true"></i>

                </h1>

                <br>
            </div>
            <div class="col-lg-12">
                @using (Html.BeginForm("data_pembeli", "user", new
                {
                    id =
                        Model.tblPembeli.id_pembeli
                }, FormMethod.Post, new
                {
                    @class =
                        "form-horizontal daftar text-center",
                    role = "form"
                }))
                {
                    <fieldset>
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">Data Pembeli </h3>
                            </div>
                            <div class="panel-body">
                                <div class="col-md-12">
                                    <legend style="padding-top: 12px; text-align: left" class="control-label">Profil Peserta *
                                    <hr>
                                        <label>Status*</label>
                                        <br />

                                        @if (@Model.tblDetailTiket.total_transfer != 0)
                                        {

                                            <label>Anda Telah Melunasi Pembayaran</label>
                                        }
                                        else
                                        {

                                            <label>Silahkan Melunasi Pembayaran Anda</label>
                                        }

                                    </legend>
                                    <hr>
                                </div>
                                <div class="col-md-4 ">
                                    <div class="form-group ">
                                        <label class="control-label" for="">Nama </label>
                                        <div class="form-input">

                                            @Html.TextBoxFor(u => u.tblPembeli.nm_pembeli, new { @class = "form-control", @placeholder = "Nama", @type = "name" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-md-offset-1">
                                    <div class="form-group ">
                                        <label class="control-label" for="">Email</label>
                                        <div class="form-input">
                                            @Html.TextBoxFor(u => u.tblPembeli.email_pembeli, new { @class = "form-control", @placeholder = "Masukan Email", @type = "email" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group ">
                                        <label class="control-label" for="">No Handphone</label>
                                        <div class="form-input">

                                            @Html.TextBoxFor(u => u.tblPembeli.hp_pembeli, new { @class = "form-control", @placeholder = "No Handphone", @type = "text" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-md-offset-1">
                                    <div class="form-group has-warning ">
                                        <label class="control-label" for="hargaTiket">Harga Tiket</label>
                                        <div class="form-input">

                                            @Html.TextBoxFor(u => u.rp_harga_tiket, new { @class = "form-control", @placeholder = "Harga Tiket", @type = "text" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group ">
                                        <label class="control-label" for="">Nama Bandara Berangkat</label>
                                        <div class="form-input">

                                            @Html.TextBoxFor(u => u.nm_bandara_berangkat, new
                                       {
                                           @readonly =
                                               "readonly",
                                           @class = "form-control",
                                           @placeholder = "Bandara Berangkat",
                                           @type = "text"
                                       })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-md-offset-1">
                                    <div class="form-group has-warning ">
                                        <label class="control-label" for="inputWarning">
                                            Nama Bandara
Tujuan</label>
                                        <div class="form-input">
                                            @Html.TextBoxFor(u => u.nm_bandara_tujuan, new
                                       {
                                           @readonly =
                                               "readonly",
                                           @class = "form-control",
                                           @placeholder = "Bandara Tujuan",
                                           @type = "text"
                                       })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group ">
                                        <label class="control-label" for="">Pajak Bandara Berangkat</label>
                                        <div class="form-input">
                                            @Html.TextBoxFor(u => u.rp_bandara_berangkat, new
                                       {
                                           @readonly =
                                               "readonly",
                                           @class = "form-control",
                                           @placeholder = "Bandara Berangkat",
                                           @type = "text"
                                       })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 col-md-offset-1">
                                    <div class="form-group has-warning ">
                                        <label class="control-label" for="inputWarning">
                                            Pajak Bandara Tujuan</label>
                                        <div class="form-input">
                                            @Html.TextBoxFor(u => u.rp_bandara_tujuan, new
                                       {
                                           @readonly =
                                               "readonly",
                                           @class = "form-control",
                                           @placeholder = "Bandara Tujuan",
                                           @type = "text"
                                       })

                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group ">
                                        <label class="control-label" for="">Pilihan Bank</label>
                                        <div class="form-input">
                                            @Html.TextBoxFor(u => u.tblDetailTiket.pilihan_bank, new
                                       {
                                           @readonly
                                               = "readonly",
                                           @class = "form-control",
                                           @placeholder = "Harga Tiket",
                                           @type = "text"
                                       })
                                        </div>
                                    </div>
                                    <br>
                                </div>

                            </div>
                        </div>

                        <div class="col-md-offset-10">
                            <button type="submit" class="btn btn-raised btn-info">Simpan Data</button>
                            <!-- Orang Ke 3 -->
                        </div>
                        <br>
                        <br>
                        <br>
                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>
<!-- /#page-content-wrapper -->
</div>
</body>

@Html.Partial("_Footer")
</html>